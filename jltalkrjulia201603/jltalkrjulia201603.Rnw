using Gadfly
using Distributions

N = 201

x_idx = 1:N

x = linspace(-1, 1, N)

sigma = zeros(N, N)

for i = x_idx
    for j = x_idx
        sigma[i, j] = exp(-0.5 * (abs(x[i] - x[j]) / 1)^2)
    end
end

mu = zeros(N)

### Need to make sigma postive-definite
d, v = eig(sigma)

d[d .< 1e-12] = 1e-12

sigma = v * diagm(d) * v'


gp_data = rand(50, MvNormal(mu, sigma))
\end{verbatim}

\end{frame}


